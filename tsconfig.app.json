{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode incantations */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting & Type Safety */
    "strict": true, // Enable strict mode for full TypeScript sorcery.
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* Path & Module Enhancements */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Additional Cosmic Enhancements */
    "forceConsistentCasingInFileNames": true,  // Keep file naming as consistent as the stars
    "resolveJsonModule": true,                 // Summon JSON modules like ancient scrolls
    "exactOptionalPropertyTypes": true,        // For precise control over optional properties
    "useUnknownInCatchVariables": true           // Enhance error handling with the wisdom of unknown types
  },
  "include": ["src"]
}
